# MusicTool Configuration Template
# Copy this file to .env and fill in your values

# Discogs API Configuration
DISCOGS_API_KEY=your_discogs_api_key_here
DISCOGS_API_BASE_URL=https://api.discogs.com

# File Paths (optional - can be set via UI)
# NML_FILE_PATH=/path/to/your/collection.nml
# DISCOGS_CSV_PATH=/path/to/your/discogs-export.csv

# Data Storage
DATABASE_PATH=./data/musictool.db
CACHE_PATH=./data/cache/

# API Rate Limiting
DISCOGS_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/musictool.log
